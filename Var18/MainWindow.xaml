                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ComboBox Style="{StaticResource ModernComboBoxStyle}" Grid.Column="0" Name="AdminPosition" Width="auto"
                                  Tag="Должность" ToolTip="Должность предcn. администр." Margin="0,0,5,0" Height="35"
                                  Text="{Binding DocumentData.AdminPosition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  ItemsSource="{Binding AdminPositions}" IsEditable="True" Loaded="AdminPosition_Loaded" SelectionChanged="AdminPosition_SelectionChanged" TabIndex="12"/>
                    <ComboBox Style="{StaticResource ModernComboBoxStyle}" Grid.Column="1" Name="AdminName" Width="auto"
                                  Tag="ФИО" ToolTip="ФИО предст. администр." HorizontalContentAlignment="Stretch" Height="35" Margin="0,0,5,0"
