                                  Tag="Должность" ToolTip="Должность принимающего лица" Margin="0,0,5,0" Height="35"
                                  Text="{Binding DocumentData.AcceptedPosition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  ItemsSource="{Binding AcceptedPositions}" IsEditable="True" Loaded="AcceptedPosition_Loaded" SelectionChanged="AcceptedPosition_SelectionChanged" TabIndex="10"/>
                    <ComboBox Style="{StaticResource ModernComboBoxStyle}" Grid.Column="2" Name="AcceptedName"  Width="auto"
