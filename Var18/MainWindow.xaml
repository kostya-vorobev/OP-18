                               ToolTip="Общероссийский классификатор управленческой документации" Margin="5,0,0,0"
                               />
                <TextBox Style="{StaticResource ModernTextBoxStyle}" Text="0330518" Width="Auto" Margin="0,0,0,0" Height="34"
                             Tag="Код ОКУД" ToolTip="Код формы по ОКУД (0330518 для формы ОП-18)" IsReadOnly="True" TabIndex="1"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="0,0,20,0">
