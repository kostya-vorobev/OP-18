                               ToolTip="Общероссийский классификатор предприятий и организаций" Margin="5,0,0,0"/>
                <TextBox Style="{StaticResource ModernTextBoxStyle}" Width="Auto" Margin="0,0,0,0"
                             Tag="Код ОКПО" ToolTip="Введите код организации по ОКПО" Height="35"
                             Text="{Binding DocumentData.OKPOCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" 
                         Name="OKPOCode" IsReadOnly="False" TabIndex="2"/>
            </StackPanel>

            <StackPanel Grid.Column="2" >
                <TextBlock  Style="{StaticResource LabelTextStyle}" Text="Вид деятельности по ОКДП:" VerticalAlignment="Center"
                               ToolTip="Общероссийский классификатор видов деятельности" Margin="5,0,0,0"/>
                <TextBox Style="{StaticResource ModernTextBoxStyle}" Width="Auto" Margin="0,0,0,0"
                             Tag="Код ОКДП" ToolTip="Введите код вида деятельности по ОКДП (00.00.00.000)" Height="35"
                             Text="{Binding DocumentData.OKDPCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Name="OKDPCode" MaxLength="12" TabIndex="3"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="3" Margin="0,0,0,0"/>

        </Grid>

        <!-- Данные организации -->
        <Grid Grid.Row="2" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Style="{StaticResource LabelTextStyle}" Margin="5,0,0,-1"
                               ToolTip="Полное наименование организации" Text="Организация"/>
                <ComboBox Style="{StaticResource ModernComboBoxStyle}" 
         Name="OrganizationName" 
         Margin="0,0,0,10" 
         Height="35"
         Tag="Название организации" 
         ToolTip="Введите полное наименование организации"
                          IsEditable="True"
                               Text="{Binding DocumentData.OrganizationName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  ItemsSource="{Binding OrganizationNames}" SelectionChanged="OrganizationName_SelectionChanged" LostFocus="OrganizationName_LostFocus" Loaded="OrganizationName_Loaded" TabIndex="4"/>
                <TextBlock Style="{StaticResource LabelTextStyle}" Margin="5,0,0,0"
                               ToolTip="Название структурного подразделения (если применимо)" Text="Структурное подразделение" />
                <TextBox Style="{StaticResource ModernTextBoxStyle}" Name="Department" Height="35"
                             Tag="Подразделение" ToolTip="Введите название структурного подразделения"
                             Text="{Binding DocumentData.Department, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TabIndex="5"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="20,0,0,0">

                <StackPanel Orientation="Horizontal" Margin="5,0,0,0">
                    <TextBlock Style="{StaticResource LabelTextStyle}" Text="Номер документа:" VerticalAlignment="Center" Width="105"
                                    ToolTip="Уникальный номер документа в системе учета" Margin="0"/>
                </StackPanel>
                <StackPanel Margin="0,0,0,0">
                    <TextBox Style="{StaticResource ModernTextBoxStyle}" Name="DocumentNumber" Margin="0" 
                                 HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Height="35"
                                 Tag="Номер документа" ToolTip="Введите номер документа согласно внутренней нумерации"
                                 Text="{Binding DocumentData.DocumentNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TabIndex="6"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="5,5,0,0">
                    <TextBlock Style="{StaticResource LabelTextStyle}" Text="Дата составления:" VerticalAlignment="Center"
                                   ToolTip="Дата подписания акта"/>
                </StackPanel>
                <StackPanel Margin="0,0,0,0">
                    <DatePicker Style="{StaticResource ModernDatePickerStyle}"
            Name="DocDate"
            SelectedDate="{Binding DocumentData.DocumentDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            DisplayDate="{Binding DocumentData.DocumentDate}"
            DisplayDateStart="{Binding DocumentData.DocumentDate}"
            Text="{Binding DocumentData.DocumentDate, StringFormat='dd.MM.yyyy', Mode=OneWay}" TabIndex="7">
                        <DatePicker.Resources>
                            <sys:DateTime x:Key="CurrentDate">2025-03-31</sys:DateTime>
                        </DatePicker.Resources>
                    </DatePicker>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Заголовок акта -->
        <TextBlock Style="{StaticResource HeaderTextStyle}" HorizontalAlignment="Center" Grid.Row="3" Text="АКТ О ПЕРЕДАЧЕ ТОВАРОВ И ТАРЫ ПРИ СМЕНЕ МАТЕРИАЛЬНО ОТВЕТСТВЕННОГО ЛИЦА" 
                       FontWeight="Bold" Margin="0"/>

        <!-- Таблица товаров -->
        <DataGrid Style="{StaticResource ModernDataGridStyle}" Grid.Row="5" Name="GoodsGrid" AutoGenerateColumns="False" CanUserAddRows="False"
         HeadersVisibility="Column" Margin="0,10,5,10" ColumnWidth="*" IsTabStop="True" CurrentCellChanged="GoodsGrid_CurrentCellChanged" CellEditEnding="GoodsGrid_CellEditEnding">

            <DataGrid.Columns>
                <!-- Исправленные колонки с поддержкой ToolTip -->
                <DataGridTextColumn Width="auto" Binding="{Binding Number}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="№ п/п" ToolTip="Порядковый номер записи"/>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>

                <DataGridTextColumn Width="auto" Binding="{Binding Name}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="Наименование товара/тары" ToolTip="Полное наименование товара или тары"/>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>

                <DataGridTextColumn Width="auto" Binding="{Binding Code}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="Код" ToolTip="Код товара по внутреннему классификатору"/>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>

                <DataGridTemplateColumn Header="Ед. измерения" Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding UnitName}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding DataContext.Units, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                              SelectedItem="{Binding SelectedUnit, UpdateSourceTrigger=PropertyChanged}"
                                      DisplayMemberPath="ShortName"
                              IsEditable="False"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Код ОКЕИ" Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding UnitCode}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Width="auto" Binding="{Binding Weight}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="Масса" ToolTip="Масса товара (если применимо)"/>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>

                <DataGridTextColumn Width="auto" Binding="{Binding Quantity}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="Количество" ToolTip="Количество передаваемых единиц товара"/>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>

                <DataGridTextColumn Width="auto" Binding="{Binding Price}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="Цена, руб. коп." ToolTip="Цена за единицу товара в рублях с копейками"/>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>

                <DataGridTextColumn Binding="{Binding Amount}" IsReadOnly="True">
